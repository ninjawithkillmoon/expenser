<%= form_for(:session, url: sessions_path, html: {class: "form-horizontal"}) do |f| %>
  <fieldset>
    <label>
      <span class="block input-icon input-icon-right">
        <%= f.text_field :email, class: 'span12', placeholder: 'Email address' %>
        <!--<input type="text" class="span12" placeholder="Username" />-->
        <i class="icon-user"></i>
      </span>
    </label>

    <label>
      <span class="block input-icon input-icon-right">
        <%= f.password_field :password, class: 'span12', placeholder: 'Password' %>
        <i class="icon-lock"></i>
      </span>
    </label>

    <div class="space"></div>

    <div class="row-fluid">
      <label class="span8">
        <!--<input type="checkbox" />
        <span class="lbl"> Remember Me</span>-->
      </label>

      <%= button_tag(type: :submit, class: "span4 btn btn-small btn-primary") do %>
        <i class="icon-key"></i> Login
      <% end %>
    </div>
  </fieldset>
<% end %>