<%= render 'layouts/error_messages', resource: @tag %>

<div class="control-group">
  <%= f.label :name, class: "control-label" %>
  <div class="controls">
    <%= f.text_field :name %>
  </div>
</div>

<div class="control-group">
  <%= f.label :label_class, class: "control-label" %>
  <div class="controls">
    <%= f.text_field :label_class %>
  </div>
</div>

<div class="control-group">
  <%= f.label :parent_id, class: "control-label" %>
  <div class="controls">
    <%= f.select :parent_id, @tags.collect { |tag| [tag.full_name, tag.id] }, {include_blank: true}, {class: "chzn-select-deselect", 'data-placeholder' => 'Select a category'} %>
  </div>
</div>