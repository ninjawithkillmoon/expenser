<%= render 'layouts/error_messages', resource: @transfer %>

<div class="control-group">
  <%= f.label :account_to_id, class: "control-label" %>
  <div class="controls">
    <%= f.select :account_to_id, @accounts.collect { |account| [account.name, account.id] }, {include_blank: false}, {class: "chzn-select-deselect"} %>
  </div>
</div>

<div class="control-group">
  <%= f.label :account_from_id, class: "control-label" %>
  <div class="controls">
    <%= f.select :account_from_id, @accounts.collect { |account| [account.name, account.id] }, {include_blank: false}, {class: "chzn-select-deselect"} %>
  </div>
</div>

<div class="control-group">
  <%= f.label :description, class: "control-label" %>
  <div class="controls">
    <%= f.text_area :description, {placeholder: 'Short summary of the transaction', rows: 5} %>
  </div>
</div>

<div class="control-group">
  <%= f.label :amount_dollars, "Amount", class: "control-label" %>
  <div class="controls">
    <%= f.number_field :amount_dollars, {step: 0.01} %>
  </div>
</div>

<div class="control-group">
  <%= f.label :date, class: "control-label" %>
  <div class="controls">
    <span class="input-icon input-icon-right">
      <%= f.text_field :date, class: "date-picker", 'data-date-format' => "yyyy-mm-dd", placeholder: 'Select a date' %>
      <i class="icon-calendar"></i>
    </span>
  </div>
</div>